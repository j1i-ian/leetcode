{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "Mocha Single Test",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/mocha.js",
            "args": [
                "--config",
                ".mocharc.yml",
                "${file}"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        }
    ]
}